@model DigitalMarket.Presentation.Models.Account.LoginViewModel;
@{
    ViewData["Title"] = "Sign-In";
    bool? requiresEmailConfirmation = ViewBag.RequiresEmailConfirmation;
}

<link rel="stylesheet" href="~/css/sign-in.css" />

@if (requiresEmailConfirmation == true)
{
    <partial name="Partial/RequiresEmailConfirmation" />
}
else
{
    <partial name="Partial/LoginForm" model="@Model"/>
}
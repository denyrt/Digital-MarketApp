@model DigitalMarket.Presentation.Models.Account.RegisterViewModel;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@{
    ViewData["Title"] = "Sign-In";
    bool? requiresEmailConfirmation = ViewBag.RequiresEmailConfirmation;
}
<link rel="stylesheet" href="~/css/sign-in.css" />
<script src="~/js/sign-in.js"></script>

@if (requiresEmailConfirmation == true)
{
    <partial name="Partial/RequiresEmailConfirmation" />
}
else
{
    <partial name="Partial/RegistryForm" model="@Model" />
}
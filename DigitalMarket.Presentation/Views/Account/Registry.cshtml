@model DigitalMarket.Presentation.Models.Account.RegisterViewModel;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;
@{
    ViewData["Title"] = "Sign-In";
}
<link rel="stylesheet" href="~/css/sign-in.css" />
<script src="~/js/sign-in.js"></script>

<form id="form"
      class="text-center"
      method="POST"
      asp-controller="Account"
      asp-action="Registry"
      >
    <div class="row">
        <div class="col p-4">
            <p class="h4 mb-4 p-r2 text">Sign In</p>

            <div class="form-row">
                <div class="form-group col">
                    <label for="login" class="float-left text">
                        Username
                    </label>
                    <input type="text"
                           name="username"
                           formControlName="username"
                           class="form-control"
                           placeholder="Username"
                           aria-describedby="usernameHelp"
                           value="@Model?.Username">
                    <small id="usernameHelp"
                           class="form-text text-danger small-left">
                        @Html.ValidationMessageFor(x => x.Username)
                    </small>
                </div>

                <div class="form-group col">
                    <label for="login" class="float-left text">
                        Email
                    </label>
                    <input type="email"
                           name="email"
                           formControlName="email"
                           class="form-control"
                           placeholder="Email"
                           aria-describedby="emailHelp"
                           value="@Model?.Email">
                    <small id="emailHelp"
                           class="form-text text-danger small-left">
                        @Html.ValidationMessageFor(x => x.Email)
                    </small>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <label for="password" class="float-left text">
                        Password
                    </label>
                    <input type="password"
                           name="password"
                           formControlName="password"
                           class="form-control"
                           placeholder="Password"
                           aria-describedby="passwordHelp"
                           value="@Model?.Password">
                    <small id="passwordHelp"
                           class="form-text text-danger small-left">
                        @Html.ValidationMessageFor(x => x.Password)
                    </small>
                </div>

                <div class="form-group col">
                    <label for="password" class="float-left text">
                        Confirm Password
                    </label>
                    <input type="password"
                           name="confirmPassword"
                           formControlName="confirmPassword"
                           class="form-control"
                           placeholder="Repeat your password here"
                           aria-describedby="confirmPasswordHelp"
                           value="@Model?.ConfirmPassword">
                    <small id="confirmPasswordHelp"
                           class="form-text text-danger small-left">
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                    </small>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success w-25">
                    Registry
                </button>
                <div class="w-100"></div>
                <a class="linked-text"
                   asp-controller="Account"
                   asp-action="ForgotPassword">
                    Forgot password?
                </a>
            </div>
        </div>
    </div>
</form>